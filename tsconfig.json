{
  "compilerOptions": { // 编译选项
    "target": "ES2016", // 配置编译目标代码的版本标准
    "module": "commonjs", // 配置编译目标的模块化标准  
    "lib": ["es2016"], // 环境变量
    "outDir": "./dist", // 编译结果
    "strictNullChecks": true,
    "removeComments": true, //移除注释
    "noImplicitUseStrict": true, // 编译结果不使用use strict
    "esModuleInterop": true, // 启用es模块化交互非es模块导出
    "noEmitOnError": true, // 错误时不生成编译结果
    "moduleResolution": "node", // 设置模块的解析模式
    "strictPropertyInitialization": false,// 更加严格的属性初始化检查
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
    // "typeRoots": ["./types"]
  },
  "include": ["./src"] // 编译目录
}